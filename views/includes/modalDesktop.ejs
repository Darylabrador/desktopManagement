<!-- desktop action modal -->
<div class="modal fade" id="modalAddDesktop" tabindex="-1" role="dialog" aria-labelledby="modalAddDesktopLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="modalAddDesktopLabel"> Ajouter un poste </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="messageAddDesktop"></div>
            <form id="desktopAddForm" class="modal-body" method="POST" action="/dashboard/desktop/add">
                <input required id="desktopNameAdd" name="name" type="text" class="form-control" placeholder="Nom du poste">
                <div class="mt-4 w-100 d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary mx-1" data-dismiss="modal">Annuler </button>
                    <button type="submit" class="btn btn-primary mx-1"> Ajouter </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditDesktop" tabindex="-1" role="dialog" aria-labelledby="modalEditDesktopLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="modalEditDesktopLabel"> Modifier un poste </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="messageEditDesktop"></div>
            <form id="desktopEditForm" class="modal-body" method="POST" action="/dashboard/desktop/edit">
                <input id="idDesktopEdit" type="hidden" name="idDesktop" class="form-control" id="desktopEditId">
                <input id="desktopNameEdit" required name="name" type="text" class="form-control" id="desktopNameEdit">
                <div class="mt-4 w-100 d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary mx-1" data-dismiss="modal">Annuler </button>
                    <button type="submit" class="btn btn-primary mx-1"> Modifier </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDeleteDesktop" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <h5 class="text-center"> Êtes-vous sûr de vouloir supprimer ? </h5>
            <form id="desktopDeleteForm" class="modal-body" method="POST" action="/dashboard/desktop/delete">
                <input type="hidden" name="idDesktop" id="desktopDeleteId">
                <div class="mt-4 w-100 d-flex justify-content-end">
                    <button type="button" class="btn btn-primary mx-1" data-dismiss="modal">Non</button>
                    <button type="submit" class="btn btn-danger mx-1"> Oui </button>
                </div>
            </form>
        </div>
    </div>
</div>